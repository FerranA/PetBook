<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="9dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">


        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario reportado:"
            android:textColor="#000000"
            android:layout_weight="2"/>


        <TextView
            android:visibility="visible"
            android:id="@+id/userReported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="a@a.com"
            android:textColor="#000000"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="9dp"
        android:paddingBottom="3dp">


        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report comes from:"
            android:textColor="#000000"
            android:layout_weight="2"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/userWhoReported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="b@b.com"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="9dp"
        android:paddingBottom="3dp">

        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:layout_weight="1"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/horaReport"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hora"
            android:layout_weight="2"
            android:gravity="right"
            android:paddingRight="25dp"
            android:textColor="#000000"/>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ha sido malo"
            android:textColor="#000000"
            android:textStyle="italic"
            android:paddingLeft="29dp"
            android:paddingRight="29dp"/>


    </LinearLayout>

    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#F3840705" />





</LinearLayout>
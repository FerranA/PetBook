<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.PETBook.NewReport">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorProjecte">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report an issue"
            android:textColor="#ffff"
            android:textSize="24dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:gravity="center"/>

<!--
        <android.support.design.widget.TextInputLayout
            android:id="@+id/crearWall"
            android:layout_width="0dp"
            android:layout_height="503dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textNewWall"
                android:layout_width="match_parent"
                android:layout_height="489dp"
                android:hint="Say something"
                android:inputType="textMultiLine"
                android:textAllCaps="false" />
        </android.support.design.widget.TextInputLayout>

        -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help us undersand the proble. What issue with a@a.com are you reporting?"
            android:textColor="#BE000000"
            android:textSize="19dp"
            android:padding="20dp"
            android:gravity="center"
            android:onClick="postReport"/>


    </LinearLayout>

    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:padding="4dp"
        android:background="#C8840705" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Their posts are abusive or hateful"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"/>

            <View android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:padding="4dp"
                android:background="#4D000000" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/spam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It is suspicious or spam"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"/>

            <View android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:padding="4dp"
                android:background="#4D000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Their profile info and/or images include abusive or hateful content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"/>

            <View android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:padding="4dp"
                android:background="#4D000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="They are pretending to be me or someone else"
                android:textColor="#000000"
                android:textSize="15dp"
                android:padding="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:onClick=""/>

            <View android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:padding="4dp"
                android:background="#4D000000" />

        </LinearLayout>





    </LinearLayout>


</LinearLayout>
